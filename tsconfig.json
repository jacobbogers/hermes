{
    "compilerOptions": {
        "allowUnreachableCode": true,
        "baseUrl": "./",
        "declaration": true,
        "declarationDir": "types",
        "experimentalDecorators": true,
        "jsx": "react",
        "lib": [
            "es6",
            "dom",
            "esnext.asynciterable"
        ],
        "listEmittedFiles": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "newLine": "LF",
        "noEmit": false,
        "noImplicitAny": false,
        "noLib": false,
        "noUnusedLocals": true,
        "outDir": "dist",
        "paths": {
            "~adapters/*":[
               "src/lib/adapters/*" 
            ],
            "~utils": [
                "src/lib/utils/index.ts"
            ],
            "~utils/*": [
                "src/lib/utils/*"
            ]
        },
        "removeComments": true,
        "rootDir": "./",
        "sourceMap": true,
        "strict": true,
        "target": "es2016"
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*.ts",
        "test/**/*.ts"
    ]
}