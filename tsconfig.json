{
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "test/**/*.ts",
        "test/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ],
    "compilerOptions": {
        "allowUnreachableCode": true,
        "baseUrl": ".",
        "declaration": true,
        "experimentalDecorators": true,
        "jsx": "react",
        "lib": [
            "es6",
            "dom"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "dist", /*outDir is overriden in the gulp file*/
        "paths": {
            "~*": [
                "src/*"
            ]
        },
        "rootDir": "./",
        "sourceMap": true,
        "strict": true,
        "target": "es2017"
    }
}
